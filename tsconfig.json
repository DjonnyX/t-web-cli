{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@controls": [
        "src/app/controls/index"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  }
}