{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "output",
    "strict": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["dom", "es5", "es6"],
    "@cyclone/*": [
      "src/app/cyclone/*"
    ],
    "@app/*": [
      "src/app/*"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/*.spec.ts"
  ],
  "compileOnSave": false
}